#
# fixed-point number with 2 decimal points
#
struct NumFp2:
    member val : felt
end

struct TupleNumFp2:
    member x : NumFp2
    member y : NumFp2
end

struct SvgRect:
    member x : NumFp2
    member y : NumFp2
    member w : NumFp2
    member h : NumFp2
    member arr_attributes_len : felt
    member arr_attributes : SvgAttribute*
end

#
# TODO: gives resolution into constructing path.d
